<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.expenseappmvvm">

    <application
        android:name=".app.ExpenseApp"
        android:allowBackup="true"
        android:icon="@drawable/logo_img"
        android:label="@string/app_name"
        android:roundIcon="@drawable/img_income"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExpenseAppMVVM">
        <activity
            android:name=".screen.actionScreen.ActionActivity"
            android:theme="@style/noToolbarActivity"/>
        <activity
            android:name=".screen.loginScreen.LoginActivity"
            android:theme="@style/noToolbarActivity"/>
        <activity
            android:name=".screen.splashScreen.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"/>
        <activity
            android:name=".screen.registerScreen.RegisterActivity"
            android:theme="@style/noToolbarActivity" />
        <activity
            android:name=".screen.mainScreen.MainActivity"
            android:theme="@style/noToolbarActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".screen.resetScreen.ResetActivity"
            android:theme="@style/noToolbarActivity" />
    </application>

</manifest>